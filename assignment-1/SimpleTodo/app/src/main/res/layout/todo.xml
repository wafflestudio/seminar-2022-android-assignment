<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/todo_title"
        style="@style/Widget.Todo.ListTodoTextView"
        android:layout_width="260dp"
        android:layout_marginStart="@dimen/margin_between_elements"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Washing the dishes"/>

    <TextView
        android:id="@+id/todo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_between_elements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_title"
        tools:text="Annoying me!" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="106dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/margin_between_elements"
        app:layout_constraintBottom_toBottomOf="@+id/todo_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/todo_title"
        app:layout_constraintTop_toTopOf="@+id/todo_title"
        tools:text="@string/button_undone" />

</androidx.constraintlayout.widget.ConstraintLayout>