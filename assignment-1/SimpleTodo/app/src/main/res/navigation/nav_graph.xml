<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.example.simpletodo.ui.TodoListFragment"
        android:label="TodoListFragment">
        <action
            android:id="@+id/action_todoListFragment_to_todoAdderFragment"
            app:destination="@id/todoAdderFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_todoListFragment_to_todoDetailFragment"
            app:destination="@id/todoDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/todoAdderFragment"
        android:name="com.example.simpletodo.ui.TodoAdderFragment"
        android:label="TodoAdderFragment" >
        <action
            android:id="@+id/action_todoAdderFragment_to_todoListFragment"
            app:destination="@id/todoListFragment" />
    </fragment>
    <fragment
        android:id="@+id/todoDetailFragment"
        android:name="com.example.simpletodo.ui.TodoDetailFragment"
        android:label="TodoDetailFragment" >
        <action
            android:id="@+id/action_todoDetailFragment_to_todoListFragment"
            app:destination="@id/todoListFragment" />
        <argument
            android:name="todo_id"
            app:argType="long" />
    </fragment>
</navigation>